<Page x:Class="_67TH1_LTUDTXD_HUCE_NHOM0121.View.Botricotthep"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_67TH1_LTUDTXD_HUCE_NHOM0121.View"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    Title="Tinhtoancotthep" Height="900" Width="1076" Background="Transparent">
    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        <Border Background="#cfd5e5" BorderBrush="#ebedf3" Padding="10" BorderThickness="2" x:Name="ThongsomongPage">
            <Border >
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#fefefe" Offset="0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid Grid.Column="1" Margin="20,20,10,20">
                        <Frame x:Name="MainContentFrame" NavigationUIVisibility="Hidden" Background="Transparent"/>

                        <!-- man hinh chinh-->
                        <Grid Background="AliceBlue">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Cột bên trái cho nhập liệu -->
                            <Grid Grid.Column="0" Margin="20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Tiêu đề -->
                                <TextBlock Grid.Row="0" Text="BỐ TRÍ CỐT THÉP MÓNG" 
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,20" 
                   HorizontalAlignment="Center"/>

                                <materialDesign:Card Grid.Row="1" Margin="0,0,0,20" Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="Số liệu đầu vào" FontWeight="Bold" Margin="0,0,0,10"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Column="0" Text="Fa yêu cầu(cạnh dài)" VerticalAlignment="Center" FontSize="14"/>
                                            <TextBox Grid.Column="1" Grid.Row="0" Margin="0,0,0,10"
                                                     Text="{Binding FaYeuCauDai, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"  
                                                     materialDesign:HintAssist.Hint="(mm²)" />

                                            <TextBlock Grid.Column="0" Text="Fa yêu cầu (cạnh ngắn)" Grid.Row="1" VerticalAlignment="Center" FontSize="14"/>
                                            <TextBox Grid.Column="1" Grid.Row="1" Margin="0,10,0,0"   
                                                     Text="{Binding FaYeuCauNgan, UpdateSourceTrigger=PropertyChanged}"
                                                     materialDesign:HintAssist.Hint="(mm²)"
                                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                            <TextBlock Grid.Column="0" Text="Lớp bảo vệ cốt thép" Grid.Row="2" VerticalAlignment="Center" FontSize="14"/>
                                            <TextBox Grid.Column="1" Grid.Row="2" Margin="0,10,0,0"   
          Text="{Binding ChieuDayLopBaoVe, UpdateSourceTrigger=PropertyChanged}"
          materialDesign:HintAssist.Hint="(m)"
          Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                        </Grid>
                                    </StackPanel>
                                </materialDesign:Card>

                                <!-- Thông số cốt thép theo phương cạnh dài -->
                                <materialDesign:Card Grid.Row="2" Margin="0,0,0,20" Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="Cốt thép theo phương cạnh dài" FontWeight="Bold" Margin="0,0,0,10"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <ComboBox Grid.Column="0" Grid.Row="0" Margin="0,0,0,10" 
                                                      materialDesign:HintAssist.Hint="Đường kính thép(mm)"
                                                      SelectedValue="{Binding DuongKinhThepDai, UpdateSourceTrigger=PropertyChanged}"
                                                      SelectedValuePath="Content">
                                                <ComboBoxItem>10</ComboBoxItem>
                                                <ComboBoxItem>12</ComboBoxItem>
                                                <ComboBoxItem>14</ComboBoxItem>
                                                <ComboBoxItem>16</ComboBoxItem>
                                                <ComboBoxItem>18</ComboBoxItem>
                                                <ComboBoxItem>20</ComboBoxItem>
                                                <ComboBoxItem>22</ComboBoxItem>
                                                <ComboBoxItem>25</ComboBoxItem>
                                                <ComboBoxItem>28</ComboBoxItem>
                                            </ComboBox>

                                            <TextBox Grid.Column="1" Grid.Row="0" Margin="10,0,0,10" 
                                                     Text="{Binding SoLuongThepDai, Mode=OneWay}"
                                                     IsReadOnly="True"
                                                     materialDesign:HintAssist.Hint="Số lượng thanh"/>

                                            <TextBox Grid.Column="0" Grid.Row="1" Margin="0,10,10,0" 
                                                     Text="{Binding KhoangCachThepDai, UpdateSourceTrigger=PropertyChanged}"
                                                     materialDesign:HintAssist.Hint="Khoảng cách giữa các thanh thép (mm)"/>

                                            <TextBox Grid.Column="1" Grid.Row="1" Margin="0,10,10,0" 
                                                     Text="{Binding DienTichThepDai, Mode=OneWay, StringFormat=F2}"
                                                     IsReadOnly="True"
                                                     materialDesign:HintAssist.Hint="Diện tích cốt thép (mm²)"/>
                                        </Grid>
                                    </StackPanel>
                                </materialDesign:Card>

                                <materialDesign:Card Grid.Row="3" Margin="0,0,0,20" Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="Cốt thép theo phương cạnh ngắn" FontWeight="Bold" Margin="0,0,0,10"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <ComboBox Grid.Column="0" Grid.Row="0" Margin="0,0,0,10" 
                                                      materialDesign:HintAssist.Hint="Đường kính thép(mm)"
                                                      SelectedValue="{Binding DuongKinhThepNgan, UpdateSourceTrigger=PropertyChanged}"
                                                      SelectedValuePath="Content">
                                                <ComboBoxItem>10</ComboBoxItem>
                                                <ComboBoxItem>12</ComboBoxItem>
                                                <ComboBoxItem>14</ComboBoxItem>
                                                <ComboBoxItem>16</ComboBoxItem>
                                                <ComboBoxItem>18</ComboBoxItem>
                                                <ComboBoxItem>20</ComboBoxItem>
                                                <ComboBoxItem>22</ComboBoxItem>
                                                <ComboBoxItem>25</ComboBoxItem>
                                                <ComboBoxItem>28</ComboBoxItem>
                                            </ComboBox>

                                            <TextBox Grid.Column="1" Grid.Row="0" Margin="10,0,0,10" 
                                                     Text="{Binding SoLuongThepNgan, Mode=OneWay}"
                                                     IsReadOnly="True"
                                                     materialDesign:HintAssist.Hint="Số lượng thanh"/>

                                            <TextBox Grid.Column="0" Grid.Row="1" Margin="0,10,10,0" 
                                                     Text="{Binding KhoangCachThepNgan, UpdateSourceTrigger=PropertyChanged}"
                                                     materialDesign:HintAssist.Hint="Khoảng cách các thanh (mm)"/>

                                            <TextBox Grid.Column="1" Grid.Row="1" Margin="0,10,10,0" 
                                                     Text="{Binding DienTichThepNgan, Mode=OneWay, StringFormat=F2}"
                                                     IsReadOnly="True"
                                                     materialDesign:HintAssist.Hint="Diện tích cốt thép (mm²)"/>
                                        </Grid>
                                    </StackPanel>
                                </materialDesign:Card>

                                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20" VerticalAlignment="Top">
                                    <Button Content="Kiểm Tra" Style="{StaticResource MaterialDesignRaisedButton}"
                                            materialDesign:ButtonAssist.CornerRadius="5" Margin="0,0,20,0" Width="120" Height="40"  
                                            Command="{Binding TinhToanCommand}" />
                                    <Button Content="Lưu" Style="{StaticResource MaterialDesignRaisedButton}"
                                            materialDesign:ButtonAssist.CornerRadius="5" Margin="0,0,20,0" Width="120" Height="40"
                                            Command="{Binding LuuCommand}"/>
                                </StackPanel>
                            </Grid>

                            <!--Hình vẽ minh họa-->
                            <Grid Grid.Column="1" Margin="20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="Hình Minh Họa" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"
                                           HorizontalAlignment="Center"/>

                                <materialDesign:Card Grid.Row="1" Margin="0,0,0,20">
                                    <Grid>
                                        <Image Source="/Resources/Images/anhminhhoa.jpg" />
                                    </Grid>
                                </materialDesign:Card>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Page>