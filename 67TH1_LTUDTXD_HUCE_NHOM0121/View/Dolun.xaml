<Page x:Class="_67TH1_LTUDTXD_HUCE_NHOM0121.View.Dolun"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_67TH1_LTUDTXD_HUCE_NHOM0121.View"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    Title="Dolun" Height="656" Width="1076" Background="Transparent">
    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        <Border Background="#cfd5e5" BorderBrush="#ebedf3" Padding="10" BorderThickness="2" x:Name="ThongsomongPage">
            <Border >
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#fefefe" Offset="0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid Grid.Column="1" Margin="20,20,10,20">
                        <Frame x:Name="MainContentFrame" NavigationUIVisibility="Hidden" Background="Transparent"/>
                        <!-- man hinh chinh-->
                        <Grid Background="White" Margin="10" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" MinHeight="224.92"/>
                                <RowDefinition Height="0*"/>
                                <RowDefinition Height="Auto" MinHeight="347.08"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="TÍNH ĐỘ LÚN NỀN ĐẤT" 
                FontSize="26" FontWeight="Bold"  Foreground="DarkBlue" HorizontalAlignment="Center" Margin="0,10,0,10" Width="292"/>
                            <!--BẢNG TÍNH LÚN-->
                            <TabControl Margin="5,5,5,5">
                                <TabItem>
                                    <StackPanel Margin="5">
                                        <GroupBox Header="THÔNG SỐ" Margin="0,0,0,5">
                                            <UniformGrid Columns="4">
                                                <StackPanel>
                                                    <Label Content="Độ sâu mực nước ngầm "/>
                                                    <TextBox Height="25"/>
                                                </StackPanel>
                                                <StackPanel>
                                                    <Label HorizontalAlignment="Center" Content="Đơn vị"/>
                                                    <TextBlock HorizontalAlignment="Center" Text="m"/>
                                                </StackPanel>
                                                <StackPanel>
                                                    <Label Content="Chiều sâu chôn móng "/>
                                                    <TextBox Height="25"/>
                                                </StackPanel>
                                                <StackPanel>
                                                    <Label HorizontalAlignment="Center" Content="Đơn vị"/>
                                                    <TextBlock HorizontalAlignment="Center" Text="m"/>
                                                </StackPanel>
                                                <StackPanel>
                                                    <Label Content="Chiều dày lớp phân tố "/>
                                                    <TextBox Height="25"/>
                                                </StackPanel>
                                                <StackPanel>
                                                    <Label HorizontalAlignment="Center" Content="Đơn vị"/>
                                                    <TextBlock HorizontalAlignment="Center" Text="m"/>
                                                </StackPanel>

                                            </UniformGrid>
                                        </GroupBox>
                                    </StackPanel>
                                </TabItem>
                            </TabControl>
                            <!--Kết quả-->
                            <StackPanel Grid.Row="2" Orientation="Vertical" Margin="10,10,10,10">
                                <Button Content="Tính Toán " Command="{Binding TinhToanDoLun}"
                 Style="{StaticResource MaterialDesignRaisedLightButton}" Width="400"/>

                                <GroupBox  Header="TẢI TRỌNG TIÊU CHUẨN, ỨNG SUẤT" Margin="10">
                                    <UniformGrid Columns="4">
                                        <StackPanel>
                                            <Label Content="Tải trọng tiêu chuẩn trung bình "/>
                                            <TextBox Height="25"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <Label HorizontalAlignment="Center" Content="Đơn vị"/>
                                            <TextBlock HorizontalAlignment="Center" Text="T/m²"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <Label Content="Ứng suất bản thân tại đáy móng "/>
                                            <TextBox Height="25"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <Label HorizontalAlignment="Center" Content="Đơn vị"/>
                                            <TextBlock HorizontalAlignment="Center" Text="kN/m²"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <Label Content="Ứng suất gây lún tại đáy móng "/>
                                            <TextBox Height="25"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <Label HorizontalAlignment="Center" Content="Đơn vị"/>
                                            <TextBlock HorizontalAlignment="Center" Text="kN/m²"/>
                                        </StackPanel>
                                    </UniformGrid>
                                </GroupBox>
                                <Button Content="Mở bảng EXCEL " 
Style="{StaticResource MaterialDesignRaisedLightButton}" Width="400"/>
                                <GroupBox Header="Báo Cáo Kết Quả Tính Toán " Margin="10">
                                    <TextBlock Text="{Binding BaoCao}" />
                                </GroupBox>
                            </StackPanel>
                        </Grid>
                        <!-- ket thuc-->
                    </Grid>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Page>

