<Window x:Class="_67TH1_LTUDTXD_HUCE_NHOM0121.View.SolieuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_67TH1_LTUDTXD_HUCE_NHOM0121.View"
        mc:Ignorable="d"
       xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Số liệu " Height="600" Width="800"  WindowStyle="ToolWindow"  WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Window.Resources>
        <!-- Định nghĩa style cho TextBlock -->
        <Style TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignBody1TextBlock}">
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Hiển thị thông số móng -->
        <materialDesign:Card Grid.Row="0" Margin="16" Padding="16"  BorderBrush="#FF7163BA" BorderThickness="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Tiêu đề -->
                <TextBlock Text="Thông số móng:" Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                           Grid.ColumnSpan="2" Margin="0,0,0,10"/>

                <!-- Cột 1 -->
                <!-- Chiều dài móng -->
                <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0">
                    <TextBlock Text="Chiều dài móng (m): " FontWeight="Bold"/>
                    <TextBlock Text="{Binding SolieuData.chieuDaiMong}"/>
                </StackPanel>

                <!-- Chiều rộng móng -->
                <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0">
                    <TextBlock Text="Chiều rộng móng (m): " FontWeight="Bold"/>
                    <TextBlock Text="{Binding SolieuData.chieuRongMong}"/>
                </StackPanel>

                <!-- Chiều cao móng -->
                <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="0">
                    <TextBlock Text="Chiều cao móng  (m): " FontWeight="Bold"/>
                    <TextBlock Text="{Binding SolieuData.chieuCaoMong}"/>
                </StackPanel>

                <!-- Tải trọng thẳng đứng N -->
                <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="0">
                    <TextBlock Text="Tải trọng thẳng đứng N (T): " FontWeight="Bold"/>
                    <TextBlock Text="{Binding SolieuData.N}"/>
                </StackPanel>

                <!-- Tải trọng ngang Q -->
                <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="0">
                    <TextBlock Text="Chiều Sâu chôn móng (m): " FontWeight="Bold"/>
                    <TextBlock Text="{Binding SolieuData.chieuSauChonMong}"/>
                </StackPanel>

                <!-- Cột 2 -->
                <!-- Mô-men M -->
                <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1">
                    <TextBlock Text="Mô-men M (T.m): " FontWeight="Bold"/>
                    <TextBlock Text="{Binding SolieuData.Momen}"/>
                </StackPanel>

                <!-- Mác bê tông -->
                <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1">
                    <TextBlock Text="Chiều dài cột (m)" FontWeight="Bold"/>
                    <TextBlock Text="{Binding SolieuData.chieuDaiCot}"/>
                </StackPanel>

                <!-- Loại thép -->
                <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1">
                    <TextBlock Text="Chiều rộng cột (m): " FontWeight="Bold"/>
                    <TextBlock Text="{Binding SolieuData.chieuRongCot}"/>
                </StackPanel>

                <!-- Cường độ bê tông -->
                <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="1">
                    <TextBlock Text="Cường độ bê tông (MPa): " FontWeight="Bold"/>
                    <TextBlock Text="{Binding SolieuData.cuongDoBeTong}"/>
                </StackPanel>

                <!-- Cường độ thép -->
                <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="1">
                    <TextBlock Text="Cường độ thép (MPa): " FontWeight="Bold"/>
                    <TextBlock Text="{Binding SolieuData.cuongDoThep}"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Hiển thị bảng DataGrid từ thông số đất -->
        <materialDesign:Card Grid.Row="1" Margin="16" Padding="16"  BorderBrush="#FF7163BA" BorderThickness="5">
            <DataGrid ItemsSource="{Binding DanhSachDat}" AutoGenerateColumns="False" 
                      Style="{StaticResource MaterialDesignDataGrid}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="STT" Binding="{Binding IdDat}" Width="60"/>
                    <DataGridTextColumn Header="Loại đất" Binding="{Binding LoaiDat}" Width="80"/>
                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding TrangThai}" Width="80"/>
                    <DataGridTextColumn Header="Góc ma sát(°)" Binding="{Binding GocMaSat}" Width="100"/>
                    <DataGridTextColumn Header="Mô-đun nén ép(MPa)" Binding="{Binding ModunNenEp}" Width="100"/>
                    <DataGridTextColumn Header="Lực dính(kPa)" Binding="{Binding LucDinh}" Width="120"/>
                    <DataGridTextColumn Header="Dung trọng(kN/m³)" Binding="{Binding DungTrong}" Width="100"/>
                    <DataGridTextColumn Header="Chiều dày " Binding="{Binding ChieuDay}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>
    </Grid>
</Window>
