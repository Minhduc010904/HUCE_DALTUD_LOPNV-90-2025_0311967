<Page x:Class="_67TH1_LTUDTXD_HUCE_NHOM0121.View.Succhiutai"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_67TH1_LTUDTXD_HUCE_NHOM0121.View"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    Title="Succhiutai" Height="656" Width="1076" Background="Transparent">
    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        <Border Background="#cfd5e5" BorderBrush="#ebedf3" Padding="10" BorderThickness="2" x:Name="ThongsomongPage">
            <Border >
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#fefefe" Offset="0"/>

                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid Grid.Column="1" Margin="20,20,10,20">
                        <Frame x:Name="MainContentFrame" NavigationUIVisibility="Hidden" Background="Transparent"/>

                        <!-- man hinh chinh-->
                        <Grid Background="White">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!--Tiêu đề -->

                            <Border Grid.Row="0" Background="#2196F3" Padding="15" >
                                <TextBlock Text="Khả năng chịu lực của nền đất" FontSize="26" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center">

                                </TextBlock>
                            </Border>
                            <Grid Grid.Row="1" Margin="20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!--Thông số tính toán-->

                                <Border Grid.Column="0" BorderBrush="AliceBlue" BorderThickness="1" Margin="0,0,10,0" CornerRadius="4">
                                    <Grid Margin="15">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!--Pannel-->
                                        <TextBlock Grid.Row="0" Text="Thông Số Tính Toán" FontSize="18" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,15"/>
                                        <!--Thông số đầu vào-->
                                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" >
                                            <StackPanel>
                                                <GroupBox Header="Thông số móng đơn" Margin="0,0,0,15">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="150"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="50"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>

                                                        </Grid.RowDefinitions>

                                                        <!--Lực Dọc-->
                                                        <TextBlock Grid.Row="0" Text="Lực dọc(N)" VerticalAlignment="Center" Margin="0,8" />
                                                        <TextBox  Grid.Row="0" Grid.Column="1" Text="{Binding N}" IsReadOnly="True" Margin="5" Padding="5"/>
                                                        <TextBlock Grid.Row="0" Grid.Column="2" Text="kN" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                                        <!--Momen-->
                                                        <TextBlock Grid.Row="1" Text="Lực Momen(M)" VerticalAlignment="Center" Margin="0,8" />
                                                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Momen}" IsReadOnly="True" Margin="5" Padding="5"/>
                                                        <TextBlock Grid.Row="1" Grid.Column="2" Text="kN.m" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                                        <!--Hệ số an toàn-->
                                                        <TextBlock Grid.Row="2" Text="Hệ số an toàn(Fs)" VerticalAlignment="Center" Margin="0,8" />
                                                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Fs ,Mode=TwoWay}" Margin="5" Padding="5"/>
                                                        <TextBlock Grid.Row="2" Grid.Column="2" Text="" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                                        <!--Góc Ma Sát-->
                                                        <TextBlock Grid.Row="3" Text="Góc Ma Sát" VerticalAlignment="Center" Margin="0,8" />
                                                        <TextBox Grid.Row="3" Grid.Column="1"  Text="{Binding GocMaSat, Mode=TwoWay}"  Margin="5" Padding="5"/>
                                                        <TextBlock Grid.Row="3" Grid.Column="2" Text="độ" VerticalAlignment="Center" Margin="5,0,0,0"/>



                                                    </Grid>
                                                </GroupBox>

                                                <!--Các hệ số tính toán-->
                                                <GroupBox Header="Hệ số tính toán" Margin="0,0,0,15" Padding="10">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="150"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="50"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>

                                                        <!--Các hệ số-->
                                                        <TextBlock Grid.Row="0" Text="Hệ số Ny" VerticalAlignment="Center" Margin="0,8" />
                                                        <TextBox Grid.Row="0" Grid.Column="1"  Text="{Binding Ngamma, Mode=OneWay}" IsReadOnly="True" Margin="5" Padding="5"/>
                                                        <TextBlock Grid.Row="0" Grid.Column="2" Text="" VerticalAlignment="Center" Margin="5,0,0,0"/>

                                                        <TextBlock Grid.Row="1" Text="Hệ số Nq" VerticalAlignment="Center" Margin="0,8" />
                                                        <TextBox Grid.Row="1" Grid.Column="1"  Text="{Binding Nq, Mode=OneWay}" IsReadOnly="True" Margin="5" Padding="5"/>
                                                        <TextBlock Grid.Row="1" Grid.Column="2" Text="" VerticalAlignment="Center" Margin="5,0,0,0"/>

                                                        <TextBlock Grid.Row="2" Text="Hệ số Nc" VerticalAlignment="Center" Margin="0,8" />
                                                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Nc, Mode=OneWay}" IsReadOnly="True" Margin="5" Padding="5"/>
                                                        <TextBlock Grid.Row="1" Grid.Column="2" Text="" VerticalAlignment="Center" Margin="5,0,0,0"/>



                                                    </Grid>
                                                </GroupBox>
                                            </StackPanel>
                                        </ScrollViewer>

                                        <!--Button tính toán-->
                                        <Button Height="50" Grid.Row="2" Content="TÍNH TOÁN"
                              Command="{Binding TinhToanCommand}"
                         Margin="0,15,0,0" Padding="15,10"
                         Background="#2196F3" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" BorderThickness="0" Width="150" FontSize="14
                         ">

                                        </Button>



                                    </Grid>
                                </Border>

                                <!--Pannel 2-->
                                <Border Grid.Column="1" BorderBrush="White" BorderThickness="1" Margin="10,0,0,0" CornerRadius="5">
                                    <Grid Margin="15">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="Kết Quả Tính Toán" FontSize="18" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,15"/>

                                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" >
                                            <StackPanel>
                                                <GroupBox Header="Sức chịu tải" Margin="0,0,0,15">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="150"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="50"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>


                                                        </Grid.RowDefinitions>

                                                        <!--Ptx-->
                                                        <TextBlock Grid.Row="0" Text="Ptx" VerticalAlignment="Center" Margin="0,8" />
                                                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Ptx,Mode=OneWay}" Margin="5" Padding="5"/>
                                                        <TextBlock Grid.Row="0" Grid.Column="2" Text="t/m2" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                                        <!--Pmax-->
                                                        <TextBlock Grid.Row="1" Text="Pmax" VerticalAlignment="Center" Margin="0,8" />
                                                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Pmax,Mode=OneWay}" Margin="5" Padding="5"/>
                                                        <TextBlock Grid.Row="1" Grid.Column="2" Text="t/m2" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                                        <!--Pmin-->
                                                        <TextBlock Grid.Row="2" Text="Pmin" VerticalAlignment="Center" Margin="0,8" />
                                                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Pmin,Mode=OneWay}" Margin="5" Padding="5"/>
                                                        <TextBlock Grid.Row="2" Grid.Column="2" Text="t/m2" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                                        <!--R-->
                                                        <TextBlock Grid.Row="3" Text="Rd" VerticalAlignment="Center" Margin="0,8" />
                                                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Rd,Mode=OneWay}" Margin="5" Padding="5"/>
                                                        <TextBlock Grid.Row="3" Grid.Column="2" Text="t/m2" VerticalAlignment="Center" Margin="5,0,0,0"/>



                                                    </Grid>
                                                </GroupBox>

                                                <!--Các hệ số tính toán-->
                                                <GroupBox Header="Điều Kiện Kiểm Tra" Margin="0,0,0,15" Padding="10">
                                                    <Grid>

                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>

                                                        <!--Kiểm tra điều kiện 1-->
                                                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5">
                                                            <TextBlock Text="Điều Kiện 1 : Ptx ≤ Rđ: " FontWeight="Bold"/>
                                                            <TextBlock Text="{Binding KiemTra1}"/>

                                                        </StackPanel>
                                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5">
                                                            <TextBlock Text="Điều Kiện 2 : Pmax ≤ 1.2Rđ: " FontWeight="Bold"/>
                                                            <TextBlock Text="{Binding KiemTra2}"/>

                                                        </StackPanel>
                                                        <Border Grid.Row="2" Margin="0,10,0,0" Padding="10"
                                         Background="{Binding NenKetQua}">
                                                            <TextBlock Text="{Binding KetQuaKiemTra}" Foreground="White" FontSize="16" FontWeight="Bold" TextWrapping="Wrap"/>
                                                        </Border>




                                                    </Grid>
                                                </GroupBox>
                                            </StackPanel>
                                        </ScrollViewer>

                                    </Grid>

                                    <!--Thông số đầu vào-->


                                </Border>
                            </Grid>
                        </Grid>



                        <!-- ket thuc-->
                    </Grid>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Page>
