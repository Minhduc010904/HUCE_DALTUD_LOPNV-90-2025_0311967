<Page x:Class="_67TH1_LTUDTXD_HUCE_NHOM0121.View.Thongsomong"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_67TH1_LTUDTXD_HUCE_NHOM0121.View"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:vm="clr-namespace:_67TH1_LTUDTXD_HUCE_NHOM0121.ViewModel"
      
   
    mc:Ignorable="d"
      
    Title="ThongSoMong" Height="656" Width="1076" Background="Transparent">

    <Grid>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        <Border Background="#cfd5e5" BorderBrush="#ebedf3" Padding="10" BorderThickness="2" x:Name="ThongsomongPage">
            <Border >
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#fefefe" Offset="0"/>

                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid Grid.Column="1" Margin="20,20,10,20">


                        <!-- man hinh chinh-->
                        <StackPanel x:Name="DefaultDataInput" Visibility="Visible">

                            <Border CornerRadius="10" Background="White" Padding="15" Margin="0,-10,0,15" >
                                <StackPanel >
                                    <!--  -->
                                    <TextBlock Text="Kích thước móng" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <Border CornerRadius="5" Background="#f5f6fa" Padding="15" Margin="0,0,0,15">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="Chiều dài móng (m) l:" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Margin="0,0,15,10"/>
                                            <TextBox Grid.Row="0" Grid.Column="1" Margin="0,0,20,10"  x:Name="txtChieuDaiMong" Text="{Binding ChieuDaiMong, Mode=TwoWay}"/>

                                            <TextBlock Text="Chiều rộng móng (m) b:" VerticalAlignment="Center" Grid.Row="0" Grid.Column="2" Margin="0,0,15,10"/>
                                            <TextBox Grid.Row="0" Grid.Column="3" Margin="0,0,0,10" Text="{Binding ChieuRongMong, Mode=TwoWay}" x:Name="txtChieuRongMong"/>

                                            <TextBlock Text="Chiều cao móng (m) hm :" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="0,0,15,0"/>
                                            <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,20,0" Text="{Binding ChieuCaoMong, Mode=TwoWay}" x:Name="txtChieuCaoMong"/>


                                            <TextBlock Text="Chiều sâu chôn móng (m) hm :" VerticalAlignment="Center" Grid.Row="1" Grid.Column="2" Margin="0,0,15,0"/>
                                            <TextBox Grid.Row="1" Grid.Column="4" Margin="0,0,20,0" Text="{Binding ChieuSauChonMong, Mode=TwoWay}" x:Name="txtChieuSauChonMong"/>
                                        </Grid>
                                    </Border>

                                    <!-- tai trong -->
                                    <TextBlock Text="Thông tin tải trọng" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <Border CornerRadius="5" Background="#f5f6fa" Padding="15" Margin="0,0,0,15">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="Tải trọng thẳng đứng N (T):" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Margin="0,0,15,10"/>
                                            <TextBox Grid.Row="0" Grid.Column="1" Margin="0,0,20,10" Text="{Binding TaiTrongN, Mode=TwoWay}" x:Name="txtTaiTrongN"/>

                                            <TextBlock Text="Tải trọng thẳng ngang Q (T)" VerticalAlignment="Center" Grid.Row="0" Grid.Column="2" Margin="0,0,15,10"/>
                                            <TextBox Grid.Row="0" Grid.Column="3" Margin="0,0,0,10" Text="{Binding TaiTrongQ, Mode=TwoWay}"  x:Name="txtTaiTrongQ"/>

                                            <TextBlock Text="Mô-men M (T.m):" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="0,0,15,10"/>
                                            <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,20,10" Text="{Binding MoMenM, Mode=TwoWay}"  x:Name="txtMoMenM"/>
                                        </Grid>
                                    </Border>

                                    <!-- vat lieu -->
                                    <TextBlock Text="Thông tin vật liệu" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <Border CornerRadius="5" Background="#f5f6fa" Padding="15" Margin="0,0,0,15">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="Mác Bê Tông:" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Margin="0,0,15,10"/>
                                            <ComboBox Grid.Row="0" Grid.Column="1" Margin="0,0,20,10" x:Name="cboMacBeTong" ItemsSource="{Binding DanhSachMacBeTong}"  SelectedItem="{Binding SelectedMacBeTong}" />


                                            <TextBlock Text="Loại cốt thép:" VerticalAlignment="Center" Grid.Row="0" Grid.Column="2" Margin="0,0,15,10"/>
                                            <ComboBox Grid.Row="0" Grid.Column="3" Margin="0,0,0,10" Text="18.5" x:Name="cboLoaiThep" ItemsSource="{Binding DanhSachLoaiThep}"  SelectedItem="{Binding SelectedLoaiThep}">

                                            </ComboBox>

                                            <TextBlock Text="Cường độ bê tông (MPa):" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="0,0,15,10"/>
                                            <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,20,10" Text="{Binding CuongDoBeTong, Mode=OneWay}" IsReadOnly="True" x:Name="txtCuongDoBeTong"/>

                                            <TextBlock Text="Cường độ cốt thép (MPa):" VerticalAlignment="Center" Grid.Row="1" Grid.Column="2" Margin="0,0,15,10"/>
                                            <TextBox Grid.Row="1" Grid.Column="3" Margin="0,0,0,10" Text="{Binding CuongDoThep, Mode=OneWay}" IsReadOnly="True" x:Name="txtCuongDoThep"/>
                                        </Grid>
                                    </Border>

                                    <!-- he so -->
                                    <TextBlock Text="KÍch thước cột" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <Border CornerRadius="5" Background="#f5f6fa" Padding="15" Margin="0,0,0,15">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="Chiều dài cột lc (m):" VerticalAlignment="Center" Grid.Column="0" Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Margin="0,0,20,0" Text="" x:Name="txtChieuDaiCot" />

                                            <TextBlock Text="Chiều rộng cột bc (m):" VerticalAlignment="Center" Grid.Column="2" Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="3" Text="" x:Name="txtChieuRongCot"/>
                                        </Grid>
                                    </Border>

                                    <!-- nut chuyen page -->
                                    <Button Content="Thông số đất" Background="#FF87BA63" BorderBrush="#7163ba" x:Name="Thongsodat" 
                                    Width="200" Height="40" HorizontalAlignment="Center" Margin="0,0,120,0"
                                    Style="{StaticResource MaterialDesignRaisedButton}" Click="Thongsodat_Click"/>
                                    <Button Content="Thông số móng " Background="#FFE97555" BorderBrush="#FF7163BA" 
                                Width="200" Height="40" HorizontalAlignment="Left"
                                Style="{StaticResource MaterialDesignRaisedButton}" VerticalAlignment="Center" Margin="0,-39,0,0"/>
                                    <Button Content="Lưu số liệu" Background="#FF2E3F99" BorderBrush="#7163ba" x:Name="Luusolieu"
                                Width="200" Height="40" HorizontalAlignment="Right"
                                Style="{StaticResource MaterialDesignRaisedButton}" VerticalAlignment="Center" Margin="0,-39,0,0" Click="Luusolieu_Click"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Page>
