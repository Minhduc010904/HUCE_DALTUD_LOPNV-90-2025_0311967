<Page x:Class="_67TH1_LTUDTXD_HUCE_NHOM0121.View.Tinhtoancotthep"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_67TH1_LTUDTXD_HUCE_NHOM0121.View"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    Title="Botricotthep" Height="900" Width="1076" Background="Transparent">
    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        <Border Background="#cfd5e5" BorderBrush="#ebedf3" Padding="10" BorderThickness="2" x:Name="ThongsomongPage">
            <Border>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#fefefe" Offset="0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid Grid.Column="1" Margin="20,20,10,20">
                        <Frame x:Name="MainContentFrame" NavigationUIVisibility="Hidden" Background="Transparent"/>

                        <!-- Main screen with scroll functionality -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <Grid Background="AliceBlue" Height="888">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Left column for input -->
                                <Grid Grid.Column="0" Margin="20">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Title -->
                                    <TextBlock Grid.Row="0" Text="TÍNH TOÁN CỐT THÉP MÓNG" 
                                        FontSize="24" FontWeight="Bold" Margin="0,0,0,20" 
                                        HorizontalAlignment="Center"/>

                                    <!-- Input data -->
                                    <materialDesign:Card Grid.Row="1" Margin="0,0,0,20" Padding="16">
                                        <StackPanel>
                                            <TextBlock Text="Số liệu tính toán" FontWeight="Bold" Margin="0,0,0,10"/>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Column="0" Grid.Row="0" Text="Pong" VerticalAlignment="Center" FontSize="14"/>
                                                <TextBox Grid.Column="1" Grid.Row="0" Margin="0,0,0,10" x:Name="txtPong"
                                                    Text="{Binding Pong, UpdateSourceTrigger=PropertyChanged}"
                                                    Style="{StaticResource MaterialDesignOutlinedTextBox}" 
                                                    materialDesign:HintAssist.Hint="T/m2" />

                                                <TextBlock Grid.Column="0" Grid.Row="1" Text="bng" VerticalAlignment="Center" FontSize="14"/>
                                                <TextBox Grid.Column="1" Grid.Row="1" Margin="0,0,0,10" x:Name="txtBng"
                                                    Text="{Binding Bng, UpdateSourceTrigger=PropertyChanged}"
                                                    materialDesign:HintAssist.Hint="m"
                                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                                <TextBlock Grid.Column="2" Grid.Row="0" Text="lng" VerticalAlignment="Center" FontSize="14" Margin="10,0,0,0"/>
                                                <TextBox Grid.Column="3" Grid.Row="0" Margin="0,0,0,10" x:Name="txtLng"
                                                    Text="{Binding Lng, UpdateSourceTrigger=PropertyChanged}"
                                                    materialDesign:HintAssist.Hint="m"
                                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                                <TextBlock Grid.Column="2" Grid.Row="1" Text="Rs" VerticalAlignment="Center" FontSize="14" Margin="10,0,0,0"/>
                                                <TextBox Grid.Column="3" Grid.Row="1" Margin="0,0,0,10 "
                                                    Text="{Binding CuongDoThep , UpdateSourceTrigger=PropertyChanged}"
                                                    materialDesign:HintAssist.Hint="MPa"
                                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                                <TextBlock Grid.Column="0" Grid.Row="2" Text="h0" VerticalAlignment="Center" FontSize="14"/>
                                                <TextBox Grid.Column="1" Grid.Row="2" Margin="0,0,0,10" 
                                                    Text="{Binding h0, UpdateSourceTrigger=PropertyChanged}"
                                                    materialDesign:HintAssist.Hint="m"
                                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                            </Grid>
                                        </StackPanel>
                                    </materialDesign:Card>

                                    <!-- Reinforcement parameters for long side -->
                                    <materialDesign:Card Grid.Row="2" Margin="0,0,0,20" Padding="16">
                                        <StackPanel>
                                            <TextBlock Text="Cốt thép theo phương cạnh dài" FontWeight="Bold" Margin="0,0,0,10"/>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Column="0" Grid.Row="0" Text="Mlng" VerticalAlignment="Center" FontSize="14"/>
                                                <TextBox Grid.Column="1" Grid.Row="0" Margin="0,0,0,10" x:Name="txtMlng"
                                                    Text="{Binding Mlng, Mode=OneWay, StringFormat=F2}"
                                                    IsReadOnly="True"
                                                    materialDesign:HintAssist.Hint="T.m"
                                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                                <TextBlock Grid.Column="0" Grid.Row="1" Text="Fa yêu cầu" VerticalAlignment="Center" FontSize="14"/>
                                                <TextBox Grid.Column="1" Grid.Row="1" Margin="0,10,0,0" x:Name="txtFaYeuCauDai"
                                                    Text="{Binding FaYeuCauDai, Mode=OneWay, StringFormat=F2}"
                                                    IsReadOnly="True"
                                                    materialDesign:HintAssist.Hint="mm2"
                                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                            </Grid>
                                        </StackPanel>
                                    </materialDesign:Card>

                                    <!-- Reinforcement parameters for short side -->
                                    <materialDesign:Card Grid.Row="3" Margin="0,0,0,20" Padding="16">
                                        <StackPanel>
                                            <TextBlock Text="Cốt thép theo phương cạnh ngắn" FontWeight="Bold" Margin="0,0,0,10"/>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Column="0" Grid.Row="0" Text="Mbng" VerticalAlignment="Center" FontSize="14"/>
                                                <TextBox Grid.Column="1" Grid.Row="0" Margin="0,0,0,10" 
                                                    Text="{Binding Mbng, Mode=OneWay, StringFormat=F2}" x:Name="txtMbng"
                                                    IsReadOnly="True"
                                                    materialDesign:HintAssist.Hint="T.m"
                                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                                <TextBlock Grid.Column="0" Grid.Row="1" Text="Fa yêu cầu" VerticalAlignment="Center" FontSize="14"/>
                                                <TextBox Grid.Column="1" Grid.Row="1" Margin="0,10,0,0" 
                                                    Text="{Binding FaYeuCauNgan, Mode=OneWay, StringFormat=F2}" x:Name="txtFaYeuCauNgan"
                                                    IsReadOnly="True"
                                                    materialDesign:HintAssist.Hint="mm2"
                                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                            </Grid>
                                        </StackPanel>
                                    </materialDesign:Card>

                                    <!-- Buttons -->
                                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20" VerticalAlignment="Top">
                                        <Button Content="Tính Toán" 
                                            Command="{Binding TinhToanCommand}"
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            materialDesign:ButtonAssist.CornerRadius="5" Margin="0,0,20,0" Width="120" Height="40"/>
                                        <Button Content="Lưu" 
                                            Command="{Binding LuuCommand}"
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            materialDesign:ButtonAssist.CornerRadius="5" Margin="0,0,20,0" Width="120" Height="40" Click="Button_Click"/>
                                    </StackPanel>

                                    <!-- Result display -->

                                </Grid>

                                <!-- Right column for illustration -->
                                <Grid Grid.Column="1" Margin="20">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>

                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Hình Minh Họa" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"
                                        HorizontalAlignment="Center"/>

                                    <materialDesign:Card Grid.Row="1" Margin="0,0,0,20">
                                        <Grid>
                                            <Image Source="/Resources/Images/Bố trí cốt thép yêu cầu.jpg" />
                                        </Grid>
                                    </materialDesign:Card>

                                    <materialDesign:Card Grid.Row="2" Margin="0,0,0,20" Padding="16">
                                        <StackPanel>
                                            <TextBlock Text="Kết quả" FontWeight="Bold" Margin="0,0,0,10"/>
                                            <TextBlock Text="{Binding KetQuaTinhToan}" 
                             FontSize="14" 
                              Foreground="Blue"
                              TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </materialDesign:Card>
                                </Grid>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Page>