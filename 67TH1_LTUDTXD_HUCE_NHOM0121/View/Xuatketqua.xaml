<Page x:Class="_67TH1_LTUDTXD_HUCE_NHOM0121.View.Xuatketqua"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_67TH1_LTUDTXD_HUCE_NHOM0121.View"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      Title="XuatBanVe" Height="656" Width="1076" Background="Transparent">
    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        <Border Background="#cfd5e5" BorderBrush="#ebedf3" Padding="10" BorderThickness="2" x:Name="XuatBanVePage">
            <Border>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#fefefe" Offset="0"/>
                        <GradientStop Color="#ededef" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid Grid.Column="1" Margin="20,20,10,20">
                        <Frame x:Name="MainContentFrame" NavigationUIVisibility="Hidden" Background="Transparent"/>

                        <!-- Xuất bản vẽ  -->
                        <Grid x:Name="XuatBanVeView">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Buttons -->
                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <!-- Header -->
                                <TextBlock Text="Xuất kết quả" FontSize="24" FontWeight="Bold" Margin="0,0,0,30"/>

                                <!-- Excel Export Button -->
                                <Button
                                    x:Name="btnXuatExcel"                              
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    materialDesign:ButtonAssist.CornerRadius="8"
                                    Height="60"
                                    Margin="0,0,0,25"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    FontSize="16"
                                    FontWeight="Medium"
                                    HorizontalAlignment="Stretch">
                                    <Button.Effect>
                                        <DropShadowEffect BlurRadius="10" Color="#DDDDDD" Direction="315" Opacity="0.6" ShadowDepth="3"/>
                                    </Button.Effect>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FileExcel" Width="30" Height="30" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                        <TextBlock Text="Xuất kết quả báo cáo Excel" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- AutoCAD Export Button -->
                                <Button
                                    x:Name="btnXuatAutoCAD"                              
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    materialDesign:ButtonAssist.CornerRadius="8"
                                    Height="60"
                                    Margin="0,0,0,25"
                                    Background="#FF5722"
                                    Foreground="White"
                                    FontSize="16"
                                    FontWeight="Medium"
                                    HorizontalAlignment="Stretch">
                                    <Button.Effect>
                                        <DropShadowEffect BlurRadius="10" Color="#DDDDDD" Direction="315" Opacity="0.6" ShadowDepth="3"/>
                                    </Button.Effect>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FileCAD" Width="30" Height="30" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                        <TextBlock Text="Xuất bản vẽ AutoCAD" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>



                                <!-- thong tin chu thich -->
                                
                            </StackPanel>

                            <!-- Ban ve demo -->
                            <materialDesign:Card Grid.Column="1" UniformCornerRadius="8" Padding="0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Header -->
                                    <Border Grid.Row="0" Background="#F5F5F5" Padding="15">
                                        <DockPanel>
                                            <TextBlock Text="Xem trước bản vẽ" FontSize="18" FontWeight="Medium" Foreground="#3f51b5"/>
                                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button
                                                    x:Name="btnZoomIn"
                                                    Style="{StaticResource MaterialDesignIconButton}"
                                                    Width="40"
                                                    Height="40"
                                                    Margin="0,0,8,0"
                                                    ToolTip="Phóng to">
                                                    <materialDesign:PackIcon Kind="Magnify" Width="22" Height="22"/>
                                                </Button>
                                                <Button
                                                    x:Name="btnZoomOut"
                                                    Style="{StaticResource MaterialDesignIconButton}"
                                                    Width="40"
                                                    Height="40"
                                                    Margin="0,0,8,0"
                                                    ToolTip="Thu nhỏ">
                                                    <materialDesign:PackIcon Kind="MagnifyMinus" Width="22" Height="22"/>
                                                </Button>
                                                <Button
                                                    x:Name="btnResetView"
                                                    Style="{StaticResource MaterialDesignIconButton}"
                                                    Width="40"
                                                    Height="40"
                                                    ToolTip="Khôi phục tỷ lệ">
                                                    <materialDesign:PackIcon Kind="Restore" Width="22" Height="22"/>
                                                </Button>
                                            </StackPanel>
                                        </DockPanel>
                                    </Border>

                                    <!-- bang canva -->
                                    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                        <Canvas x:Name="previewCanvas" Background="White" Width="480" Height="580">
                                            <!--  -->
                                            <TextBlock Canvas.Left="150" Canvas.Top="280" Text="Xem trước bản vẽ" FontSize="16" Foreground="#BBBBBB"/>
                                        </Canvas>
                                    </ScrollViewer>
                                </Grid>
                            </materialDesign:Card>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Page>
